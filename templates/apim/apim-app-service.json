{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apimName": {
      "type": "string"
    },
    "appServiceResourceGroup": {
      "type": "string"
    },
    "appServiceName": {
      "type": "string"
    }
  },
  "variables": {
    "appServiceResourceId": "[resourceId(parameters('appServiceResourceGroup'), 'Microsoft.Web/sites', parameters('appServiceName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.ApiManagement/service/backends",
      "apiVersion": "2019-01-01",
      "name": "[concat(parameters('apimName'), '/', parameters('appServiceName'))]",
      "dependsOn": [
      ],
      "properties": {
        "url": "[concat('https://', parameters('appServiceName'), '.azurewebsites.net/api')]",
        "protocol": "http",
        "resourceId": "[concat('https://management.azure.com', variables('appServiceResourceId'))]"
      }
    }
  ],
  "outputs": {}
}
