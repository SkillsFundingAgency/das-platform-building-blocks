{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apimName": {
      "type": "string"
    },
    "apimBackendType": {
      "type": "string",
      "allowedValues": [
        "functionApp",
        "appService"
      ]
    },
    "functionAppResourceGroup": {
      "type": "string",
      "defaultValue": "[concat('functionAppResourceGroup', uniqueString(resourceGroup().id))]"
    },
    "functionAppName": {
      "type": "string",
      "defaultValue": "[concat('functionAppResourceName', uniqueString(resourceGroup().id))]"
    },
    "functionAppKeyName": {
      "type": "string",
      "defaultValue": "[concat('functionAppKeyName', uniqueString(resourceGroup().id))]"
    },
    "appServiceResourceGroup": {
      "type": "string",
      "defaultValue": "[concat('appServiceResourceGroup', uniqueString(resourceGroup().id))]"
    },
    "appServiceName": {
      "type": "string",
      "defaultValue": "[concat('appServiceResourceName', uniqueString(resourceGroup().id))]"
    }
  },
  "variables": {
    "functionAppId": "[resourceId(parameters('functionAppResourceGroup'),'Microsoft.Web/sites', parameters('functionAppName'))]"
  },
  "resources": [
    {
      "condition": "[equals(parameters('apimBackendType'), 'functionApp')]",
      "type": "Microsoft.ApiManagement/service/backends",
      "apiVersion": "2019-01-01",
      "name": "[concat(parameters('apimName'), '/', parameters('functionAppName'))]",
      "dependsOn": [],
      "properties": {
        "url": "[concat('https://', parameters('functionAppName'), '.azurewebsites.net/api')]",
        "protocol": "http",
        "resourceId": "[concat('https://management.azure.com/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('functionAppResourceGroup'), '/providers/Microsoft.Web/sites/', parameters('functionAppName'))]",
        "credentials": {
          "header": {
            "x-functions-key": [
              "[listkeys(concat(variables('functionAppId'), '/host/default/'),'2016-08-01').functionKeys[parameters('functionAppKeyName')]]"
            ]
          }
        }
      }
    },
    {
      "condition": "[equals(parameters('apimBackendType'), 'appService')]",
      "type": "Microsoft.ApiManagement/service/backends",
      "apiVersion": "2019-01-01",
      "name": "[concat(parameters('apimName'), '/', parameters('appServiceName'))]",
      "dependsOn": [
      ],
      "properties": {
        "url": "[concat('https://', parameters('appServiceName'), '.azurewebsites.net/api')]",
        "protocol": "http",
        "resourceId": "[concat('https://management.azure.com/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('appServiceResourceGroup'), '/providers/Microsoft.Web/sites/', parameters('appServiceName'))]"
      }
    }
  ],
  "outputs": {}
}
