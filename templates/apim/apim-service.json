{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apiManagementServiceName": {
      "type": "string"
    },
    "publisherEmail": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "The email address of the owner of the service"
      }
    },
    "publisherName": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "The name of the owner of the service"
      }
    },
    "sku": {
      "type": "string",
      "allowedValues": [
        "Consumption",
        "Developer",
        "Basic",
        "Standard",
        "Premium"
      ],
      "defaultValue": "Developer",
      "metadata": {
        "description": "The pricing tier of this API Management service"
      }
    },
    "skuCount": {
      "type": "string",
      "allowedValues": [
        "1",
        "2"
      ],
      "defaultValue": "1",
      "metadata": {
        "description": "The instance size of this API Management service."
      }
    },
    "virtualNetworkType": {
      "type": "string",
      "allowedValues": [
        "None",
        "Internal",
        "External"
      ],
      "defaultValue": "None"
    },
    "subnetResourceId": {
      "type": "string",
      "defaultValue": ""
    },
    "keyVaultName": {
      "type": "string",
      "defaultValue": ""
    },
    "keyVaultResourceGroupName": {
      "type": "string",
      "defaultValue": ""
    },
    "portalkeyVaultCertificateName": {
      "type": "string",
      "defaultValue": ""
    },
    "portalHostname": {
      "type": "string",
      "defaultValue": ""
    }
  },
  "variables": {
    "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/",
    "deployToNetwork": "[and(greater(length(parameters('subnetResourceId')), 0), not(equals(parameters('virtualNetworkType'), 'None')))]",
    "vnetConfiguration": {
      "subnetResourceId": "[parameters('subnetResourceId')]"
    }
  },
  "resources": [
    {
      "apiVersion": "2019-01-01",
      "name": "[parameters('apiManagementServiceName')]",
      "type": "Microsoft.ApiManagement/service",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "[parameters('sku')]",
        "capacity": "[parameters('skuCount')]"
      },
      "properties": {
        "hostnameConfigurations": [
          {
            "type": "DeveloperPortal",
            "hostName": "[parameters('portalHostname')]",
            "keyVaultId": "[reference(resourceId('Microsoft.KeyVault/vaults/secrets', parameters('keyVaultName'), parameters('portalkeyVaultCertificateName')), '2018-02-14').secretUriWithVersion]",
            "negotiateClientCertificate": false
          }
        ],
        "publisherEmail": "[parameters('publisherEmail')]",
        "publisherName": "[parameters('publisherName')]",
        "virtualNetworkConfiguration": "[if(variables('deployToNetwork'), variables('vnetConfiguration'), json('null'))]",
        "virtualNetworkType": "[parameters('virtualNetworkType')]"
      },
      "identity": {
        "type": "SystemAssigned"
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "[concat(parameters('apiManagementServiceName'),'-keyvault-accesspolicy')]",
      "resourceGroup": "[parameters('keyVaultResourceGroupName')]",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'keyvault-accesspolicies.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "keyVaultName": {
            "value": "[parameters('keyvaultName')]"
          },
          "accessPolicies": {
            "value": [
              {
                "objectId": "[reference(resourceId('Microsoft.ApiManagement/service', parameters('apiManagementServiceName')), '2019-01-01', 'Full').identity.principalId]",
                "tenantId": "[reference(resourceId('Microsoft.ApiManagement/service', parameters('apiManagementServiceName')), '2019-01-01', 'Full').identity.tenantId]",
                "permissions": {
                  "secrets": [
                    "Get"
                  ]
                }
              }
            ]
          }
        }
      }
    }
  ]
}
