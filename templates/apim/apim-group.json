{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apimName": {
      "type": "string"
    },
    "tenantId": {
      "type": "string"
    },
    "aadGroupObjectId": {
      "type": "string"
    },
    "groupDisplayName": {
      "type": "string"
    },
    "groupDescription": {
      "type": "string"
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "[concat(parameters('apimName'), '/', parameters('aadGroupObjectId'))]",
      "type": "Microsoft.ApiManagement/service/groups",
      "apiVersion": "2019-12-01",
      "properties": {
        "displayName": "[parameters('groupDisplayName')]",
        "description": "[parameters('groupDescription')]",
        "type": "external",
        "externalId": "[concat('aad://', parameters('tenantId'), '/groups/', parameters('aadGroupObjectId'))]"
      }
    }
  ],
  "outputs": {}
}
