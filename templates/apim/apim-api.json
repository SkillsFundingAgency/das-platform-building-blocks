{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apimName": {
      "type": "string"
    },
    "apiDisplayName": {
      "type": "string"
    },
    "apiUrlSuffix": {
      "type": "string"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.ApiManagement/service/apis",
      "apiVersion": "2019-01-01",
      "name": "[concat(parameters('apimName'), '/', parameters('apiUrlSuffix'))]",
      "dependsOn": [],
      "properties": {
        "displayName": "[parameters('apiDisplayName')]",
        "apiRevision": "1",
        "path": "[parameters('apiUrlSuffix')]",
        "protocols": [
          "https"
        ],
        "isCurrent": true
      }
    }
  ],
  "outputs": {}
}
