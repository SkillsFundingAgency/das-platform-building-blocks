{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "administratorLogin": {
            "type": "string"
        },
        "administratorLoginPassword": {
            "type": "securestring"
        },
        "serverName": {
            "type": "string",
            "metadata": {
                "description": "Name of MySQL PaaS instance"
            }
        },
        "skuName": {
            "type": "string",
            "defaultValue": "B_Gen5_1"
        },
        "skuTier": {
            "type": "string",
            "defaultValue": "Basic"
        },
        "skuCapacity": {
            "type": "int",
            "defaultValue": 1
        },
        "version": {
            "type": "string",
            "defaultValue": "5.7"
        },
        "backupRetentionDays": {
            "type": "int",
            "defaultValue": 7
        },
        "geoRedundantBackup": {
            "type": "string",
            "defaultValue": "disabled"
        },

        "skuSizeMB": {
            "type": "int",
            "defaultValue": 5120
        },
        "databaseName": {
            "type": "string",
            "defaultValue": "database01"
        },
        "firewallRuleName": {
            "type": "string"

        },
        "firewallStartIpAddress": {
            "type": "string"

        },
        "firewallendIpAddress": {
            "type": "string"

        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2017-12-01",
            "name": "[parameters('serverName')]",
            "type": "Microsoft.DBforMySQL/servers",
            "location": "[resourceGroup().location]",

            "sku": {
              "name": "[parameters('skuName')]",
              "tier": "[parameters('skuTier')]",
              "capacity": "[parameters('skuCapacity')]",
              "family": "Gen5"
            },
            "properties": {
              "administratorLogin": "[parameters('administratorLogin')]",
              "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
              "version": "[parameters('version')]",
              "sslEnforcement": "Enabled",
              "storageProfile": {
                "backupRetentionDays": "[parameters('backupRetentionDays')]",
                "geoRedundantBackup": "[parameters('geoRedundantBackup')]",
                "storageMB": "[parameters('skuSizeMB')]"
              },
              "createMode": "Default"
            },
            "tags": {},
            "resources": [
                {
                    "name": "[parameters('databaseName')]",
                    "type": "databases",
                    "apiVersion": "2017-12-01",
                    "properties": {
                      "charset": "utf8",
                      "collation": "utf8_general_ci"
                    },
                    "dependsOn": [
                        "[concat('Microsoft.DBforMySQL/servers/', parameters('serverName'))]"
                    ]
                  },
                  {
                    "name": "[parameters('firewallRuleName')]",
                    "type": "firewallRules",
                    "apiVersion": "2017-12-01",
                    "properties": {
                      "startIpAddress": "[parameters('firewallStartIpAddress')]",
                      "endIpAddress": "[parameters('FirewallEndIPAddress')]"
                    },
                    "dependsOn": [
                        "[concat('Microsoft.DBforMySQL/servers/', parameters('serverName'))]"
                    ]
                  }
            ]
          }
    ],
    "outputs": {}
}