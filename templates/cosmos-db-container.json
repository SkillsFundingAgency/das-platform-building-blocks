{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "cosmosDatabase": {
      "type": "string"
    },
    "cosmosDbAccountName": {
      "type": "string"
    },
    "containerName": {
      "type": "string"
    },
    "pathArray": {
      "type": "array",
      "defaultValue": [
      ]
    },
    "partitionKey": {
      "type": "string",
      "defaultValue": ""
    },
    "cosmosDBType": {
      "type": "string",
      "allowedValues": [
        "Sql",
        "Mongo"
      ]
    }
  },
  "variables": {
  },
  "resources": [
    {
      "type": "Microsoft.DocumentDb/databaseAccounts/apis/databases/containers",
      "condition": "[equals(parameters('cosmosDBType'), 'Sql')]",
      "name": "[concat(parameters('cosmosDbAccountName'), '/sql/', parameters('cosmosDatabase'), '/', parameters('containerName'))]",
      "apiVersion": "2016-03-31",
      "properties": {
        "resource": {
          "id": "[parameters('containerName')]",
          "indexingPolicy": {
            "condition": "[greater(length(parameters('pathArray')),0)]",
            "indexingMode": "consistent",
            "includedPaths": "[parameters('pathArray')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.DocumentDb/databaseAccounts/apis/databases/collections",
      "condition": "[equals(parameters('cosmosDBType'), 'Mongo')]",
      "name": "[concat(parameters('cosmosDbAccountName'), '/mongodb/', parameters('cosmosDatabase'), '/', parameters('containerName'))]",
      "apiVersion": "2016-03-31",
      "properties": {
        "resource": {
          "id": "[parameters('containerName')]",
          "shardKey": {
            "condition": "[greater(length(parameters('partitionKey')),1)]",
            "[parameters('partitionKey')]": "Hash"
          }
        }
      }
    }
  ],
  "outputs": {
  }
}
