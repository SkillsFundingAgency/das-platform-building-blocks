{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "cosmosDatabase": {
      "type": "string"
    },
    "cosmosDbAccountName": {
      "type": "string"
    },
    "containerName": {
      "type": "string"
    },
    "pathArray": {
      "type": "array",
      "defaultValue": []
    },
    "partitionKey": {
      "type": "string",
      "defaultValue": ""
    },
    "throughput": {
      "type": "string",
      "defaultValue": ""
    },
    "maxThroughput": {
      "type": "string",
      "defaultValue":""
    },
    "cosmosDBType": {
      "type": "string",
      "allowedValues": [
        "GlobalDocumentDB",
        "MongoDB"
      ]
    }
  },
  "variables": {
    "createIndexPaths": "[greater(length(parameters('pathArray')),0)]",
    "globalDocumentDBContainerParameters": {
      "WithIndex": {
        "resource": {
          "id": "[parameters('containerName')]",
          "indexingPolicy": {
            "indexingMode": "consistent",
            "includedPaths": "[parameters('pathArray')]"
          }
        }
      },
      "NoIndex": {
        "resource": {
          "id": "[parameters('containerName')]"
        }
      }
    },
    "createPartitionKey": "[greater(length(parameters('partitionKey')),0)]",
    "mongoContainerParameters": {
      "WithPartitionKey": {
        "resource": {
          "id": "[parameters('containerName')]",
          "shardKey": {
            "[parameters('partitionKey')]": "Hash"
          }
        }
      },
      "WithoutPartitionKey": {
        "resource": {
          "id": "[parameters('containerName')]"
        }
      }
    },
    "useAutoscaleSettings": "[greater(length(parameters('maxThroughput')),0)]",
    "throughputSettings": {
      "WithAutoscaling": {
        "options":{
          "autoscaleSettings":{
            "maxThroughput": "[parameters('maxThroughput')]"
          }
        }
      },
      "WithoutAutoscaling": {
        "options":{
          "throughput": "[parameters('throughput')]"
        }
      }
    },
    "partitionKeyProperties": "[if(variables('createPartitionKey'), variables('mongoContainerParameters').WithPartitionKey, variables('mongoContainerParameters').WithoutPartitionKey)]",
    "throughtputProperties": "[if(variables('useAutoscaleSettings'), variables('throughputSettings').WithAutoscaling, variables('throughputSettings').WithoutAutoscaling)]",
    "mongoDBContainerProperties": "[union(variables('partitionKeyProperties'),variables('throughtputProperties'))]"
  },
  "resources": [
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases/containers",
      "condition": "[equals(parameters('cosmosDBType'), 'GlobalDocumentDB')]",
      "name": "[concat(parameters('cosmosDbAccountName'), '/', parameters('cosmosDatabase'), '/', parameters('containerName'))]",
      "apiVersion": "2021-04-15",
      "properties": "[if(variables('createIndexPaths'), variables('globalDocumentDBContainerParameters').WithIndex, variables('globalDocumentDBContainerParameters').NoIndex)]"
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/mongodbDatabases/collections",
      "condition": "[equals(parameters('cosmosDBType'), 'MongoDB')]",
      "name": "[concat(parameters('cosmosDbAccountName'), '/', parameters('cosmosDatabase'), '/', parameters('containerName'))]",
      "apiVersion": "2021-04-15",
      "properties": "[variables('mongoDBContainerProperties')]"
    }
  ]
}
