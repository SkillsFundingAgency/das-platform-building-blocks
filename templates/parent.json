{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templateBaseUrl": {
            "type": "string"
        },
        "containerSasToken": {
            "type": "string"
        },
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Name of the storage account"
            }
        },
        "storageAccountLocation": {
            "type": "string",
            "metadata": {
                "description": "Recommendation: If using to store backup data, choose the paired region for resilience"
            }
        },
        "storageAccountResourceGroup": {
            "type": "string"
        },
        "accountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Premium_LRS"
            ]
        },
        "accessTier": {
            "type": "string",
            "defaultValue": "",
            "allowedValues": [
                "Hot",
                "Cool",
                ""
            ],
            "metadata": {
                "description": "This setting is required if using BlobStorage as the storageKind, otherwise can be left blank"
            }
        },
        "storageKind": {
            "type": "string",
            "defaultValue": "Storage",
            "allowedValues": [
                "Storage",
                "StorageV2",
                "BlobStorage"
            ]
        },
        "cdnProfileName": {
            "type": "string",
            "metadata": {
                "description": "Name of Content Delivery Name profile"
            }
        },
        "cdnPricingTier": {
            "type": "string",
            "defaultValue": "Standard_Verizon",
            "allowedValues": [
                "Premium_Verizon",
                "Custom_Verizon",
                "Standard_Verizon",
                "Standard_Akamai",
                "Standard_Microsoft"
            ]
        },
        "cdnEndPointName": {
            "type": "string"
        },
        "originHostName": {
            "type": "string"
        },
        "optimizationType": {
            "type": "string",
            "defaultValue": "GeneralWebDelivery",
            "allowedValues": [
                "GeneralWebDelivery",
                "GeneralMediaStreaming",
                "VideoOnDemandMediaStreaming",
                "LargeFileDownload",
                "DynamicSiteAcceleration"
            ]
        },
        "customDomainName": {
            "defaultValue": "",
            "type": "string"
        }
    },
    "variables": {
        "storageAccountArmTemplateUri": "[concat(parameters('templateBaseUrl'), '/storage-account-arm.json', parameters('containerSasToken'))]",
        "cdnProfileTemplateUri": "[concat(parameters('templateBaseUrl'), '/cdn-profile.json', parameters('containerSasToken'))]",
        "cdnEndPointTemplateUri": "[concat(parameters('templateBaseUrl'), '/cdn-endpoint.json', parameters('containerSasToken'))]"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "storage-account-arm",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('storageAccountArmTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[parameters('storageAccountName')]"
                    },
                    "storageAccountLocation": {
                        "value": "[parameters('storageAccountLocation')]"
                    },
                    "accountType": {
                        "value": "[parameters('accountType')]"
                    },
                    "accessTier": {
                        "value": "[parameters('accessTier')]"
                    },
                    "storageKind": {
                        "value": "[parameters('storageKind')]"
                    }
                }
            },
            "dependsOn": []
        },
        {
            "apiVersion": "2017-05-10",
            "name": "cdn-profile",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('cdnProfileTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "cdnProfileName": {
                        "value": "[parameters('cdnProfileName')]"
                    },
                    "cdnPricingTier": {
                        "value": "[parameters('cdnPricingTier')]"
                    }
                }
            },
            "dependsOn": []
        },
        {
            "apiVersion": "2017-05-10",
            "name": "cdn-endpoint",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('cdnEndPointTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "cdnProfileName": {
                        "value": "[parameters('cdnProfileName')]"
                    },
                    "cdnEndPointName": {
                        "value": "[parameters('cdnEndPointName')]"
                    },
                    "optimizationType": {
                        "value": "[parameters('optimizationType')]"
                    },
                    "customDomainName": {
                        "value": "[parameters('customDomainName')]"
                    },
                    "originHostName": {
                        "value": "[parameters('originHostName')]"
                    }
                }
            },
            "dependsOn": [
                "storage-account-arm",
                "cdn-profile"
            ]
        }
    ]
}