{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "cosmosDbName": {
      "type": "string"
    },
    "cosmosDbType": {
      "type": "string",
      "allowedValues": [
        "GlobalDocumentDB",
        "MongoDB"
      ]
    },
    "defaultConsistencyLevel": {
      "type": "string",
      "allowedValues": [
        "Eventual",
        "Session",
        "BoundedStaleness",
        "Strong",
        "ConsistentPrefix"
      ]
    },
    "enableVirtualNetworkFilter": {
      "type": "bool",
      "defaultValue": false
    },
    "subnetResourceIdList":{
      "type": "array",
      "defaultValue": []
    }
  },
  "variables": {
    "virtualNetworkRulesOject": {
      "copy": [
        {
          "name": "virtualNetworkRules",
          "count": "[length(parameters('subnetResourceIdList'))]",
          "input": {
            "id": "[parameters('subnetResourceIdList')[copyIndex('virtualNetworkRules')]]"
          }
        }
      ]
    }
  },
  "resources": [
    {
      "name": "[parameters('cosmosDbName')]",
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2015-04-08",
      "location": "[resourceGroup().location]",
      "kind": "[parameters('cosmosDbType')]",
      "properties": {
        "consistencyPolicy": {
          "defaultConsistencyLevel": "[parameters('defaultConsistencyLevel')]"
        },
        "databaseAccountOfferType": "Standard",
        "isVirtualNetworkFilterEnabled": "[parameters('enableVirtualNetworkFilter')]",
        "virtualNetworkRules":  "[if(and(greater(length(parameters('subnetResourceIdList')), 0), parameters('enableVirtualNetworkFilter')), variables('virtualNetworkRulesOject'), json('null'))]"
      }
    }
  ],
  "outputs": {
    "PrimaryMasterKey": {
      "type": "string",
      "value": "[listKeys(resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDbName')), '2015-04-08').primaryMasterKey]"
    },
    "PrimaryReadonlyMasterKey": {
      "type": "string",
      "value": "[listKeys(resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDbName')), '2015-04-08').primaryReadonlyMasterKey]"
    }
  }
}
