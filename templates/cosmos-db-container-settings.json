{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "cosmosDbAccountName": {
      "type": "string"
    },
    "cosmosDatabase": {
      "type": "string"
    },
    "containerName": {
      "type": "string"
    },
    "throughput": {
      "type": "string",
      "defaultValue": ""
    },
    "maxThroughput": {
      "type": "string",
      "defaultValue": ""
    },
    "cosmosDBType": {
      "type": "string",
      "allowedValues": [
        "GlobalDocumentDB",
        "MongoDB"
      ]
    }
  },
  "variables": {
    "useAutoscaleSettings": "[greater(length(parameters('maxThroughput')),0)]",
    "throughputSettings": {
      "WithAutoscaling": {
        "properties": {
          "resource": {
            "autoscaleSettings": {
              "maxThroughput": "[parameters('maxThroughput')]"
            }
          }
        }
      },
      "WithoutAutoscaling": {
        "properties":{
          "resource": {
            "throughput": "[parameters('throughput')]"
          }
        }
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/apis/databases/containers/settings",
      "name": "[concat(parameters('cosmosDbAccountName'), '/sql/', parameters('cosmosDatabase'), '/', parameters('containerName'), '/throughput')]",
      "condition": "[equals(parameters('cosmosDBType'), 'GlobalDocumentDB')]",
      "apiVersion": "2016-03-31",
      "properties": {
        "resource": {
          "throughput": "[parameters('throughput')]"
        }
      }
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/mongodbDatabases/collections/throughputSettings",
      "condition": "[equals(parameters('cosmosDBType'), 'MongoDB')]",
      "name": "[concat(parameters('cosmosDbAccountName'), '/', parameters('cosmosDatabase'), '/', parameters('containerName'), '/default')]",
      "apiVersion": "2021-05-15",
      "properties": "[if(variables('useAutoscaleSettings'), variables('throughputSettings').WithAutoscaling, variables('throughputSettings').WithoutAutoscaling)]"
    }
  ]
}
