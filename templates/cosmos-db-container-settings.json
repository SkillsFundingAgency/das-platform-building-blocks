{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "cosmosDbAccountName": {
      "type": "string"
    },
    "cosmosDatabase": {
      "type": "string"
    },
    "containerName": {
      "type": "string"
    },
    "throughput": {
      "type": "int",
      "minValue": 400,
      "maxValue": 1000000
    },
    "cosmosDBType": {
      "type": "string",
      "allowedValues": [
        "GlobalDocumentDB",
        "MongoDB"
      ]
    }
  },
  "variables":{
    "dbTypeName":{
      "globalDocumentDbType": "[concat(parameters('cosmosDbAccountName'), '/sql/', parameters('cosmosDatabase'), '/', parameters('containerName'), '/throughput')]",
      "mongoDbType": "[concat(parameters('cosmosDbAccountName'), '/mongodb/', parameters('cosmosDatabase'), '/', parameters('containerName'), '/throughput')]"
    },
    "settingsType": {
      "sqlType": "Microsoft.DocumentDB/databaseAccounts/apis/databases/containers/settings",
      "mongoType": "Microsoft.DocumentDB/databaseAccounts/apis/databases/collections/settings"
    }
  },
  "resources": [
    {
      "type":"[if(equals(parameters('cosmosDBType'), 'GlobalDocumentDB'), variables('settingsType').sqlType, variables('settingsType').mongoType)]",
      "name": "[if(equals(parameters('cosmosDBType'), 'GlobalDocumentDB'), variables('dbTypeName').globalDocumentDbType, variables('dbTypeName').mongoDbType)]",
      "apiVersion": "2016-03-31",
      "properties": {
        "resource": {
          "throughput": "[parameters('throughput')]"
        }
      }
    }
  ]
}
