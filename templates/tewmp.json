{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serviceName": {
      "type": "string"
    },
    "customHostName": {
      "type": "string"
    },
    "certificateName": {
      "type": "string",
      "defaultValue": ""
    },
    "environmentName": {
      "type": "string"
    },
    "resourceEnvironmentName": {
      "type": "string"
    },
    "sharedFrontendAppServicePlanName": {
      "type": "string"
    },
    "sharedAppServicePlanResourceGroup": {
      "type": "string"
    }
  },
  "variables": {
    "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/mjw/defaultappsettings/templates/",
    "resourceNamePrefix": "[toLower(concat('das-', parameters('resourceEnvironmentName'),'-', parameters('serviceName')))]",
    "appServiceName": "[concat(variables('resourceNamePrefix'), '-as')]"
  },
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "app-service",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'), 'app-service.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appServiceName": {
            "value": "[variables('appServiceName')]"
          },
          "appServicePlanName": {
            "value": "[parameters('sharedFrontendAppServicePlanName')]"
          },
          "appServicePlanResourceGroup": {
            "value": "[parameters('sharedAppServicePlanResourceGroup')]"
          },
          "deployStagingSlot": {
            "value": true
          },
          "appServiceSlotSettingAppSettings": {
            "value": [
              "WEBSITE_LOCAL_CACHE_OPTION",
              "WEBSITE_LOCAL_CACHE_SIZEINMB"
            ]
          },
          "appServiceAppSettings": {
            "value": [
              {
                "name": "EnvironmentName",
                "value": "[toUpper(parameters('environmentName'))]"
              }
            ]
          },
          "appServiceSlotAppSettings": {
            "value": [
              {
                "name": "ASPNETCORE_ENVIRONMENT",
                "value": "[toUpper(parameters('environmentName'))]"
              }
            ]
          },
          "appServiceConnectionStrings": {
            "value": [
            ]
          },
          "customHostName": {
            "value": "[parameters('customHostName')]"
          }
        },
        "dependsOn": [
        ]
      }
    }
  ],
  "outputs": {
    "appServiceName": {
      "type": "string",
      "value": "[variables('appServiceName')]"
    }
  }
}
