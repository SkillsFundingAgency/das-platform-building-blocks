{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "afdProfileName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Azure Front Door profile"
            }
        },
        "afdEndPointName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Azure Front Door endpoint"
            }
        },
        "originHostName": {
            "type": "string",
            "metadata": {
                "description": "The host name of the origin. Must be a domain name."
            }
        },
        "originPath": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "The path to the origin."
            }
        },
        "customDomainName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "The custom domain name."
            }
        },
        "customDomainResourceName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "The resource name for the custom domain. If not provided, will be derived from customDomainName."
            }
        },
        "originGroupName": {
            "type": "string",
            "defaultValue": "default-origin-group",
            "metadata": {
                "description": "The name of the origin group."
            }
        },
        "originName": {
            "type": "string",
            "defaultValue": "default-origin",
            "metadata": {
                "description": "The name of the origin."
            }
        },
        "routeName": {
            "type": "string",
            "defaultValue": "default-route",
            "metadata": {
                "description": "The name of the route."
            }
        },
        "enabledState": {
            "type": "string",
            "defaultValue": "Enabled",
            "allowedValues": [
                "Enabled",
                "Disabled"
            ],
            "metadata": {
                "description": "Whether to enable use of this rule. Permitted values: 'Enabled', 'Disabled'"
            }
        },
        "httpsRedirect": {
            "type": "string",
            "defaultValue": "Enabled",
            "allowedValues": [
                "Enabled",
                "Disabled"
            ],
            "metadata": {
                "description": "Whether to automatically redirect HTTP traffic to HTTPS traffic. Permitted values: 'Enabled', 'Disabled'"
            }
        },
        "forwardingProtocol": {
            "type": "string",
            "defaultValue": "MatchRequest",
            "allowedValues": [
                "HttpOnly",
                "HttpsOnly",
                "MatchRequest"
            ],
            "metadata": {
                "description": "Protocol this rule will use when forwarding traffic to backends. Permitted values: 'HttpOnly', 'HttpsOnly', 'MatchRequest'"
            }
        },
        "queryStringCachingBehavior": {
            "type": "string",
            "defaultValue": "IgnoreQueryString",
            "allowedValues": [
                "IgnoreQueryString",
                "UseQueryString",
                "NotSet"
            ],
            "metadata": {
                "description": "Defines how the CDN caches requests that include query strings. You can ignore any query strings when caching, bypass caching to prevent requests that contain query strings from being cached, or cache every request with a unique URL. Permitted values: 'IgnoreQueryString', 'UseQueryString', 'NotSet'"
            }
        }
    },
    "variables": {
        "originHostName": "[replace(replace(parameters('originHostName'),'https://',''),'/','')]",
        "customDomainEnabled": "[greater(length(parameters('customDomainName')), 0)]",
        "customDomainResourceName": "[if(greater(length(parameters('customDomainResourceName')), 0), parameters('customDomainResourceName'), if(greater(length(parameters('customDomainName')), 0), replace(parameters('customDomainName'), '.', '-'), 'placeholder-domain'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Cdn/profiles/afdEndpoints",
            "apiVersion": "2023-05-01",
            "name": "[concat(parameters('afdProfileName'), '/', parameters('afdEndPointName'))]",
            "location": "global",
            "properties": {
                "enabledState": "[parameters('enabledState')]"
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/originGroups",
            "apiVersion": "2023-05-01",
            "name": "[concat(parameters('afdProfileName'), '/', parameters('originGroupName'))]",
            "properties": {
                "loadBalancingSettings": {
                    "sampleSize": 4,
                    "successfulSamplesRequired": 3,
                    "additionalLatencyInMilliseconds": 50
                },
                "healthProbeSettings": {
                    "probePath": "/",
                    "probeRequestType": "HEAD",
                    "probeProtocol": "Https",
                    "probeIntervalInSeconds": 100
                },
                "sessionAffinityState": "Disabled"
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/originGroups/origins",
            "apiVersion": "2023-05-01",
            "name": "[concat(parameters('afdProfileName'), '/', parameters('originGroupName'), '/', parameters('originName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles/originGroups', parameters('afdProfileName'), parameters('originGroupName'))]"
            ],
            "properties": {
                "hostName": "[variables('originHostName')]",
                "httpPort": 80,
                "httpsPort": 443,
                "originHostHeader": "[variables('originHostName')]",
                "priority": 1,
                "weight": 1000,
                "enabledState": "Enabled",
                "enforceCertificateNameCheck": true
            }
        },
        {
            "condition": "[variables('customDomainEnabled')]",
            "type": "Microsoft.Cdn/profiles/customDomains",
            "apiVersion": "2023-05-01",
            "name": "[concat(parameters('afdProfileName'), '/', variables('customDomainResourceName'))]",
            "properties": {
                "hostName": "[parameters('customDomainName')]",
                "tlsSettings": {
                    "certificateType": "ManagedCertificate",
                    "minimumTlsVersion": "TLS12"
                }
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/afdEndpoints/routes",
            "apiVersion": "2023-05-01",
            "name": "[concat(parameters('afdProfileName'), '/', parameters('afdEndPointName'), '/', parameters('routeName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles/afdEndpoints', parameters('afdProfileName'), parameters('afdEndPointName'))]",
                "[resourceId('Microsoft.Cdn/profiles/originGroups/origins', parameters('afdProfileName'), parameters('originGroupName'), parameters('originName'))]",
                "[resourceId('Microsoft.Cdn/profiles/customDomains', parameters('afdProfileName'), variables('customDomainResourceName'))]"
            ],
            "properties": {
                "customDomains": "[if(variables('customDomainEnabled'), createArray(createObject('id', resourceId('Microsoft.Cdn/profiles/customDomains', parameters('afdProfileName'), variables('customDomainResourceName')))), createArray())]",
                "originGroup": {
                    "id": "[resourceId('Microsoft.Cdn/profiles/originGroups', parameters('afdProfileName'), parameters('originGroupName'))]"
                },
                "originPath": "[if(empty(parameters('originPath')), null(), parameters('originPath'))]",
                "supportedProtocols": [
                    "Http",
                    "Https"
                ],
                "patternsToMatch": [
                    "/*"
                ],
                "cacheConfiguration": {
                    "queryStringCachingBehavior": "[parameters('queryStringCachingBehavior')]",
                    "compressionSettings": {
                        "isCompressionEnabled": true,
                        "contentTypesToCompress": [
                            "application/eot",
                            "application/font",
                            "application/font-sfnt",
                            "application/javascript",
                            "application/json",
                            "application/opentype",
                            "application/otf",
                            "application/pkcs7-mime",
                            "application/truetype",
                            "application/ttf",
                            "application/vnd.ms-fontobject",
                            "application/xhtml+xml",
                            "application/xml",
                            "application/xml+rss",
                            "application/x-font-opentype",
                            "application/x-font-truetype",
                            "application/x-font-ttf",
                            "application/x-httpd-cgi",
                            "application/x-javascript",
                            "application/x-mpegurl",
                            "application/x-opentype",
                            "application/x-otf",
                            "application/x-perl",
                            "application/x-ttf",
                            "font/eot",
                            "font/ttf",
                            "font/otf",
                            "font/opentype",
                            "image/svg+xml",
                            "text/css",
                            "text/csv",
                            "text/html",
                            "text/javascript",
                            "text/js",
                            "text/plain",
                            "text/richtext",
                            "text/tab-separated-values",
                            "text/xml",
                            "text/x-script",
                            "text/x-component",
                            "text/x-java-source"
                        ]
                    }
                },
                "forwardingProtocol": "[parameters('forwardingProtocol')]",
                "linkToDefaultDomain": "Enabled",
                "httpsRedirect": "[parameters('httpsRedirect')]",
                "enabledState": "Enabled"
            }
        }
    ],
    "outputs": {
        "endpointHostName": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Cdn/profiles/afdEndpoints', parameters('afdProfileName'), parameters('afdEndPointName'))).hostName]"
        },
        "endpointId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Cdn/profiles/afdEndpoints', parameters('afdProfileName'), parameters('afdEndPointName'))]"
        }
    }
}